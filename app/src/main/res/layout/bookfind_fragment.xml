<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            app:cardBackgroundColor="@color/card_background_color"
            app:cardCornerRadius="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="发现"
                    android:textColor="@android:color/black"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/search_icon_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/baseline_search_black_24" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tv_book_find_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bookfind_background_blue"
            android:gravity="center"
            android:padding="15dp"
            android:text="分类" />

        <TextView
            android:id="@+id/tv_book_find_rank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/bookfind_background_purple"
            android:gravity="center"
            android:padding="15dp"
            android:text="排行" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bookfind_background_red"
            android:gravity="center"
            android:padding="15dp"
            android:text="书单" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.simplynovel.zekai.simplynovel.ui.MyFindItemView xmlns:bookfind="http://schemas.android.com/apk/res/com.simplynovel.zekai.simplynovel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bookfind:my_des="VIP专区"
            bookfind:my_icon="@mipmap/baseline_account_box_black_24" />

        <com.simplynovel.zekai.simplynovel.ui.MyFindItemView xmlns:bookfind="http://schemas.android.com/apk/res/com.simplynovel.zekai.simplynovel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bookfind:my_des="免费专区"
            bookfind:my_icon="@mipmap/baseline_account_box_black_24" />

        <com.simplynovel.zekai.simplynovel.ui.MyFindItemView xmlns:bookfind="http://schemas.android.com/apk/res/com.simplynovel.zekai.simplynovel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bookfind:my_des="有声小说"
            bookfind:my_icon="@mipmap/baseline_account_box_black_24" />

        <com.simplynovel.zekai.simplynovel.ui.MyFindItemView xmlns:bookfind="http://schemas.android.com/apk/res/com.simplynovel.zekai.simplynovel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bookfind:my_des="随机看书"
            bookfind:my_icon="@mipmap/baseline_account_box_black_24" />

        <com.simplynovel.zekai.simplynovel.ui.MyFindItemView xmlns:bookfind="http://schemas.android.com/apk/res/com.simplynovel.zekai.simplynovel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bookfind:my_des="漫画专区"
            bookfind:my_icon="@mipmap/baseline_account_box_black_24" />

        <com.simplynovel.zekai.simplynovel.ui.MyFindItemView xmlns:bookfind="http://schemas.android.com/apk/res/com.simplynovel.zekai.simplynovel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bookfind:my_des="专属推荐"
            bookfind:my_icon="@mipmap/baseline_account_box_black_24" />
    </LinearLayout>
</LinearLayout>