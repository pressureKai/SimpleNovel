<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="15dp"
    app:contentPadding="8dp"
    app:cardBackgroundColor="@color/card_background_picture_color"
    app:cardCornerRadius="15dp"
    app:contentPaddingBottom="10dp">


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:paddingLeft="10dp"
        android:paddingBottom="2dp"
        android:textSize="12sp"
        android:id="@+id/book_rank_type_name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:id="@+id/book_img_main"/>
        <LinearLayout
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:textSize="12sp"
                android:id="@+id/book_name"/>
            <TextView
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:textSize="10sp"
                android:id="@+id/book_des"/>
            <TextView
                android:textSize="8sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:id="@+id/book_author"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/book_img_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"/>

            <TextView
                android:paddingTop="2dp"
                android:textColor="#000"
                android:gravity="center"
                android:textSize="8sp"
                android:id="@+id/book_name_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/book_img_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"/>
            <TextView
                android:paddingTop="2dp"
                android:textColor="#000"
                android:gravity="center"
                android:id="@+id/book_name_2"
                android:textSize="8sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"/>
        </LinearLayout>


        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/book_img_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"/>
            <TextView
                android:paddingTop="2dp"
                android:textColor="#000"
                android:gravity="center"
                android:id="@+id/book_name_3"
                android:textSize="8sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"/>
        </LinearLayout>



        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/book_img_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"/>
            <TextView
                android:paddingTop="2dp"
                android:textColor="#000"
                android:gravity="center"
                android:id="@+id/book_name_4"
                android:textSize="8sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"/>
        </LinearLayout>


        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/book_img_5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"/>
            <TextView
                android:paddingTop="2dp"
                android:gravity="center"
                android:text="test"
                android:textColor="#000"
                android:id="@+id/book_name_5"
                android:textSize="8sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</android.support.v7.widget.CardView>