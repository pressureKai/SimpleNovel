<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:id="@+id/img_search_result"
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:paddingTop="2dp"
        android:layout_margin="5dp"
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:textColor="#000"
            android:id="@+id/tv_result_bookname"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="horizontal">
            <TextView
                android:textSize="10sp"
                android:textColor="#000"
                android:id="@+id/tv_result_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="2dp"
                android:textSize="10sp"
                android:textColor="#000"
                android:id="@+id/tv_result_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="2dp"
                android:textSize="10sp"
                android:textColor="#000"
                android:id="@+id/tv_result_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:textSize="10sp"
            android:textColor="#000"
            android:id="@+id/tv_result_des"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:lines="2"
            android:layout_weight="0.4"/>

            <TextView
                android:textSize="8sp"
                android:textColor="#000"
                android:id="@+id/tv_result_updatedes"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.1"/>

            <TextView
                android:layout_marginTop="2dp"
                android:textSize="8sp"
                android:textColor="#000"
                android:id="@+id/tv_result_updatetime"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.1"/>
            <TextView
                android:paddingTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d2cccc"/>

    </LinearLayout>
</LinearLayout>